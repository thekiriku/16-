#include <iostream>
#include <windows.h>
using namespace std;
double Calculator(double num1, double num2, char sym) {
	int d = num1;
	int a = num2;
	switch (sym) {
	case('+'): return num1 + num2;
	case('-'): return num1 - num2;
	case('/'): return num1 / num2;
	case('*'): return num1 * num2;
	case('%'): return d % a;
	case('!'): return (num1 * num1 * num1) - (num2 * num2 * num2);
	case('^'): return (num1 + num2) * (num1 + num2);
	case('#'): return (num1 - num2) * (num1 - num2);
	default: cout << "Ошибка" << endl;
		system("cls");
	}
}
int main() {
	setlocale(0, "");
	cout << "[+] Программа: Калькулятор" << endl;
	cout << "[-] Введите первое число: ";
	double num1;
	cin >> num1;
	cout << "[-] Введите второе число: ";
	double num2;
	cin >> num2;
	cout << "[-] Введите действие: ";
	char sym;
	cin >> sym;
	if (sym == '/' and num2 == 0) {
		cout << "Ошибка!=" << endl;
	}
	else if (num1 == 0 and num2 == 0) {
		cout << "[=] Результат: 0";
	}
	else {
		cout << "[=] Результат: " << Calculator(num1, num2, sym);
	}
	return 0;
}

#include <iostream>
#include <Windows.h>
using namespace std;

int main() {
	setlocale(0, "");

	int translate;
	cout << "Переводчик" << endl;
	cout << "[1] Русские слова" << endl;
	cout << "[2] Английские слова" << endl;
	cout << "[3] Выйти" << endl;
	cout << "Введите: ";
	int enter;
	cin >> enter;
	switch (enter) {
	case 1:
		cout << "Перевод русских слов" << endl;
		cout << "[1] Лестница" << endl;
		cout << "[2] Компьютер" << endl;
		cout << "[3] Переводчик" << endl;
		cout << "[4] Числа" << endl;
		cout << "[5] Печенья" << endl;
		cout << "[6] Мечь" << endl;
